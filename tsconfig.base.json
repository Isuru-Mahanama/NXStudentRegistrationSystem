{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular-monorepo/admin-signup": ["libs/admin-signup/src/index.ts"],
      "@angular-monorepo/dashboard": ["libs/dashboard/src/index.ts"],
      "@angular-monorepo/login": ["libs/login/src/index.ts"],
      "@angular-monorepo/navbar": ["libs/navbar/src/index.ts"],
      "@angular-monorepo/navbarr": ["libs/navbarr/src/index.ts"],
      "@angular-monorepo/user-dashboard": ["libs/user-dashboard/src/index.ts"],
      "@angular-monorepo/user-navbar": ["libs/user-navbar/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
